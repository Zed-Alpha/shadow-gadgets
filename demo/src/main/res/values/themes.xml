<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.ShadowGadgets.Demo" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@color/light_gray</item>
        <item name="android:windowSplashScreenBackground" tools:ignore="NewApi">
            @color/white
        </item>

        <!-- Default ambient value: 0.039 -->
        <item name="android:ambientShadowAlpha">0.2</item>
        <!-- Default spot value: 0.19 -->
        <item name="android:spotShadowAlpha">0.4</item>

        <item name="checkboxStyle">@style/Widget.Demo.CheckBox</item>
        <item name="materialButtonStyle">@style/Widget.Demo.Button</item>
        <item name="radioButtonStyle">@style/Widget.Demo.RadioButton</item>
    </style>

    <style name="Widget.Demo.CheckBox" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:minHeight">44dp</item>
    </style>

    <style name="Widget.Demo.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:minHeight">44dp</item>
    </style>

    <style name="Widget.Demo.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minWidth">100dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textColor">#FF3333FF</item>
        <item name="backgroundTint">@color/see_through_red</item>
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.Demo</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ShapeAppearance.Demo" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">24dp</item>
        <item name="cornerSizeBottomRight">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
    </style>

</resources>